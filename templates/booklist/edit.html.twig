{% extends 'base.html.twig' %}

{% block title %}Edit Book{% endblock %}

{% block body %}
<div class="container">
    <h1>Edit Book</h1>

    {{ form_start(form, {'attr': {'class': 'form-horizontal mb-1'}}) }}
    <div class="form-group">
        {{ form_label(form.title, 'Title', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.title, {'attr': {'class': 'form-control mb-1 custom-width'}}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.author, 'Author', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.author, {'attr': {'class': 'form-control mb-1 custom-width'}}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.publishingYear, 'Year', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.publishingYear, {'attr': {'class': 'form-control mb-1 custom-width'}}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.genre, 'Genre', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.genre, {'attr': {'class': 'form-control mb-1 custom-width'}}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.description, {'attr': {'class': 'form-control mb-1 custom-width'}}) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary btn-sm mt-2">Update</button>
        </div>
    </div>
    {{ form_end(form) }}

    <a href="{{ path('book_index') }}">Back to list</a>
</div>
{% endblock %}
